# Nginx configuration for Django backend
# File này đặt tại: /etc/nginx/sites-available/sunedu-backend

upstream django {
    server localhost:8000;
}

server {
    listen 80;
    server_name your-domain.com www.your-domain.com;
    
    # Redirect to HTTPS (khi đã setup SSL)
    # return 301 https://$server_name$request_uri;

    client_max_body_size 100M;
    
    # Logs
    access_log /var/log/nginx/sunedu-backend-access.log;
    error_log /var/log/nginx/sunedu-backend-error.log;

    # Static files
    location /static/ {
        alias /home/ubuntu/SunEdu/backend/staticfiles/;
        expires 30d;
        add_header Cache-Control "public, immutable";
    }

    # Media files
    location /media/ {
        alias /home/ubuntu/SunEdu/backend/media/;
        expires 30d;
        add_header Cache-Control "public";
    }

    # Proxy to Django
    location / {
        proxy_pass http://django;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_redirect off;
        
        # Timeouts
        proxy_connect_timeout 600;
        proxy_send_timeout 600;
        proxy_read_timeout 600;
        send_timeout 600;
    }
}

